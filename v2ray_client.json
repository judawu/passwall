{
 "log": {
  "access": "/var/log/v2ray/access.log",
   "error": "/var/log/v2ray/err.log",
    "loglevel": "debug"
  },
  "inbounds": [
    {
      "tag":"transparent",
      "port": 12345,
      "protocol": "dokodemo-door",
      "settings": {
        "network": "tcp,udp",
        "followRedirect": true
                  },
      "sniffing": {
        "enabled": true,
        "destOverride": [
          "http",
          "tls"
                        ]
                  },
      "streamSettings": {
        "sockopt": {
          "tproxy": "tproxy" // 透明代理使用 TPROXY 方式
                   }
                        }
    },

   {
      "port": 1080,
      "listen": "127.0.0.1",
      "protocol": "socks",
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      },
      "settings": {
        "auth": "noauth",
        "udp": false
                  }
    },
	 {
      "port": 1180,
      "protocol": "socks",
      "sniffing": {
        "enabled": true,
        "destOverride": ["http", "tls"]
      },
      "settings": {
        "auth": "noauth"
      }
    }
 ],


 "outbounds": [
    {
       // VMESS
      "tag": "proxy",
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "@@@@-server-@@@@",
            "port": 443,
            "users": [
              {
                "id": "@@@@-uuid-@@@@",
                "alterId": 133
              }
                     ]
          }
                 ]
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "wsSettings": {
        "path": "/aabbccdd/"
                      },
        "sockopt": {
          "mark": 255
                    }
                        },
	   "mux": {
        "enabled": true
                 }
    },

    {
   // Shadowsocks
      "protocol": "shadowsocks",
      "settings": {
     "servers": [
       {
           "address": "@@@@-server-@@@@", // Shadowsocks 的服务器地址
            "method": "aes-128-gcm", // Shadowsocks 的加密方式
            "AEAD": true, // 是否开启 OTA，true 为开启
            "password": "@@@PASSWORD@@@", // Shadowsocks 的密码
            "port": 10005
       }
                   ]
                  }
    },
{
//如果要使用路由，这个 tag 是一定要有的，在这里 direct 就是 freedom 的一个标号，在路由中说 direct V2Ray 就知道是这里的 freedom 了
	 "tag": "direct",
     "protocol": "freedom",
     "settings": {
     "domainStrategy": "UseIP"
                 },
      "streamSettings": {
      "sockopt": {
      "mark": 255
                 }
	                    }
    },
    {
//在路由中说 adblock 就知道是这里的 blackhole（黑洞） 了
      "tag": "adblock",
	  "protocol": "blackhole",
      "settings": {
        "response": {
          "type": "http"
                    }
                  }
    },
    {
//DNS
      "tag": "dns-out",
      "protocol": "dns",
      "streamSettings": {
        "sockopt": {
          "mark": 255
                   }
                        }

   }
],

"dns": {
   "servers": [
//  "8.8.8.8",
  //"223.5.5.5",
     "1.1.1.1",
     "114.114.114.114",
     "114.114.115.115",
    {
      //中国大陆域名使用阿里的 DNS
        "address": "223.5.5.5",
        "port": 53,
        "domains":[
          "geosite:cn",
          "ntp.org" ,  // NTP 服务器
          "v6.juda.monster"  // "$myserver.address" // 此处改为你 VPS 的域名
                   ]
 //        "expectIPs":[
   //      "geoip:cn"
     //                ]
      },
    {
       "address": "8.8.8.8",
       "port": 53,
       "domains": [
         "geosite:geolocation-!cn",
         "geosite:speedtest"
                  ]
     },
     "localhost"
                  ]
 },

 "routing": {
    "domainStrategy": "IPOnDemand",

"rules": [
	  { // 劫持 53 端口 UDP 流量，使用 V2Ray 的 DNS
        "type": "field",
        "inboundTag": [
          "transparent"
                      ],
        "port": 53,
        "network": "udp",
        "outboundTag": "dns-out"
      },
	  { // 直连 123 端口 UDP 流量（NTP 协议）
        "type": "field",
        "inboundTag": [
          "transparent"
                      ],
        "port": 123,
        "network": "udp",
        "outboundTag": "direct"
       },
	  { // 设置代理Vmess
        "type": "field",
        "ip": [
          // 设置 DNS 配置中的国内 DNS 服务器地址走代理，以达到 DNS 分流目的
          "8.8.8.8",
          "1.1.1.1"
              ],
        "outboundTag": "proxy" // 改为你自己代理的出站 tag
      },
{ // 设置 DNS 配置中的国内 DNS 服务器地址直连，以达到 DNS 分流目的
        "type": "field",
       "ip": [
          "223.5.5.5",
          "114.114.114.114",
          "114.114.115.115"
              ],
        "outboundTag": "direct"
      },

 {  // 广告拦截
        "domain": [
          "tanx.com",
          "googeadsserving.cn",
          "geosite:category-ads-all"
                  ],
        "type": "field",
        "outboundTag": "adblock"
      },
	  { // BT 流量直连
        "type": "field",
        "protocol":["bittorrent"],
        "outboundTag": "direct"
      },
 {
//特殊网站直连
        "domain": [
          "amazon.com",
          "microsoft.com",
          "jd.com",
          "youku.com",
          "baidu.com"
                  ],
        "type": "field",
        "outboundTag": "direct"
      },
      {
// 直连中国大陆主流网站域名
        "type": "field",
        "outboundTag": "direct",
        "domain": ["geosite:cn"]
      },
 {
// 直连中国大陆主流网站 ip 和 保留 ip
        "type": "field",
        "outboundTag": "direct",
        "ip": [
          "geoip:cn",
          "geoip:private"
              ]
      }
        ]
}
}
